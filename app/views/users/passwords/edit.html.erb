<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <fieldset>
    <%= f.password_field :password, :placeholder => "New password", :required => true %><br />
    <%= f.password_field :password_confirmation, :placeholder => "Confirm new password", :required => true %>
  </fieldset>

  <fieldset>
    <%= f.submit "Change my password" %><br /><br />
    <%= link_to "Forgot your password?", new_user_password_path %><br />
    <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path %><br />
    <%= link_to "Didn't receive unlock instructions?", new_user_unlock_path %>
  </fieldset>
<% end %>
